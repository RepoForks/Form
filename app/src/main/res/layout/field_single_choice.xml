<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/field_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/single_choice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/field_font_title_size"
        android:textStyle="bold"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/single_choice_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/field_font_subtitle_size"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/single_choice_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/field_font_body_size"
        android:visibility="gone"/>

    <RadioGroup
        android:id="@+id/field_single_choice_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>